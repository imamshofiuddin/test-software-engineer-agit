@{
    ViewData["Title"] = "Input Produksi";
}


<h2>Input Produksi Harian (Senin–Jumat)</h2>

<form method="post" asp-action="Adjust">
    <div class="row mt-5">
    @for (int i = 0; i < 5; i++)
    {
        <div class="col">
            <input min="0" type="number" class="form-control mb-2" name="plan" required placeholder="Hari @(i + 1)" />
        </div>
    }
    </div>
    <br />
    <button class="btn btn-primary mt-2" type="submit">Proses</button>
</form>
